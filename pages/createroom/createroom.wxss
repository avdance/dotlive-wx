/* pages/createroom/createroom.wxss */


.container-box {
  width: 100vw;
  height: 100vh;
  background-repeat:no-repeat;
  background-size: cover;
  background:-webkit-gradient(linear, 0% 0%, 0% 80%,from(#061c36), to(#12161d));
}

.input-box {
  background-color: transparent;
  color: #ffffff;
  padding: 3vw 5vw;
  border-color: #577785;
  border-style: solid; 
  border-top-width: 0px;
  border-right-width: 0px; 
  border-bottom-width: 1px;
  border-left-width: 0px;
  padding-top: 20%;
  margin-left: 30px;
  margin-right: 30px;
  text-align: center;
}

.image-box {
  margin-top:  30px;
  margin-left:30px;
  margin-right:30px;
  text-align:center;
  height: 30vh;
  position: relative;
  font-size: 12px;
}

.image-box image {
  width: 100%;
  height: 100%;
   border-radius: 10rpx;
}

.box-action {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.3);
  color: #fff;
}

.bottom-btn {
  position: fixed;
  width: 92vw;
  left: 4vw;
  bottom: 6vh;
}
.bottom-btn button {
   background-color: #006eff;
   border-radius: 50px;
}