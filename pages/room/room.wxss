/* pages/room/room.wxss */

.container-box {
  background-image: url(https://mc.qcloudimg.com/static/img/7da57e0050d308e2e1b1e31afbc42929/bg.png);
  background-color: #333;
  background-repeat:no-repeat;
  background-size: cover;
  height: 100vh;
}

.board-view {
  height: 30vh;
  background-color: rgba(1, 1, 1, 0.2);
}

.board-view image {
  width: 100%;
  height: 100%;
}

.stage-view {
  height: 10vh;
  background-color: rgba(1, 1, 1, 0.4);
  border-bottom-width: 1px;
  border-bottom-color: rgba(1, 1, 1, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.stage-box {
  position: relative;
  display: inline-block;
  width: 13.6vw;
  height: 10vh;
}

.stage-box image {
  position: absolute;
  width: 10vw;
  height: 10vw;
  top: 2vh;
  left: 2.8vw;
  border-radius: 50%;
}

.comment-view {
  position: relative;
  width: 100vw;
  height: 48vh;
  margin-top: 2vw;
}

.comment {
  width: 100vw;
  height: calc(90vh - 80.33vw - 1.4rem);
  font-size: 13px;
}
.comment .comment-detail {
  padding: 5px 20px;
  color: #999;
}

.comment .comment-detail view{
  display: inline-block;
}

.color-blue {
  color: #00ecfe;
}
.color-org {
  color: #fe9500;
}

.operate-view {
    margin-top: 2vh;
    height: 8vh;
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    align-items: center;
}

.operate-view .input-box {
  background-color: transparent;
  color: #ffffff;
  padding: 1vw 1vw;
  border-color: #577785;
  border-style: solid; 
  border-top-width: 0px;
  border-right-width: 0px; 
  border-bottom-width: 0px;
  border-left-width: 0px;
  margin-left: 3px;
  margin-right: 5px;
  margin-bottom: 2vh;
  margin-top: 5px;
  display: inline-block;
  height: 6vh;
}

.operate-view .operate-item {
  flex: 1;
  margin-bottom: 2vh;
  width: 10vw;
  color: rgba(255,255,255, 0.75);
}
